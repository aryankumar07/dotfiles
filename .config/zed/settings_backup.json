{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "show_user_picture": false,
  "scrollbar": {
    "show": "auto",
    "axes": {
      "vertical": true,
      "horizontal": false
    }
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "tab_bar": {
    "show": false
  },
  "project_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "terminal": {
    "button": false,
    "copy_on_select": true,
    "dock": "left",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "o3-mini"
    },
    "version": "2"
  },
  "wrap_guides": [
    80,
    120
  ],
  "preferred_line_length": 80,
  "soft_wrap": "none",
  "gutter": {
    "code_actions": false,
    "runnables": false,
    "folds": false
  },
  "line_indicator_format": "short",
  "active_pane_modifiers": {
    "magnification": 1.5,
    "inactive_opacity": 0.85
  },
  "vim_mode": true,
  "auto_signature_help": true,
  "hover_popover_delay": 50,
  "scroll_sensitivity": 5,
  "restore_on_startup": "none",
  "auto_install_extensions": {
    "html": true,
    "css": true,
    "typescript": true,
    "javascript": true,
    "go": true,
    "dockerfile": true,
    "docker-compose": true,
    "ruff": true
  },
  "buffer_line_height": {
    "custom": 1.16
  },
  "ui_font_size": 15,
  "buffer_font_size": 15.0,
  "buffer_font_family": "Noto Sans Mono",
  "buffer_font_weight": 300,
  "ui_font_weight": 400,
  "ui_font_family": "Noto Sans",
  "theme": {
    "mode": "dark",
    "dark": "Gruvbox Dark",
    "light": "Gruvbox Light"
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "analyses": {
          "unusedparams": true,
          "shadow": true
        },
        "staticcheck": true
      }
    }
  },
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Markdown": {
      "soft_wrap": "preferred_line_length"
    },
    "Go": {
      "format_on_save": "on",
      "diagnostics_on_save": true
    },
    "TypeScript": {
      "format_on_save": "on"
    },
    "JavaScript": {
      "format_on_save": "on"
    },
    "HTML": {
      "format_on_save": "on"
    },
    "CSS": {
      "format_on_save": "on"
    }
  }
}
